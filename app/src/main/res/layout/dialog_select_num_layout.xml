<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_tv_1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="請選擇就餐人數"
        android:textColor="@color/deepTextColor" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/mFlSelectNumContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ll_2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTvSelectNumDialogCancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/deepTextColor" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/mTvSelectNumDialogSubmit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="確定"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

</LinearLayout>