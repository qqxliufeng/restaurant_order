<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/menu_text_appearance</item>
    </style>

    <style name="my_matisse_style" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="style_til_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="style_et_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
    </style>

    <style name="menu_text_appearance">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="style_tv_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/icon_user_info</item>
        <item name="android:drawableRight">@drawable/icon_enter</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#555</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="style_ctv_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/select_ctv_bg</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/select_ctv_color1</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>
